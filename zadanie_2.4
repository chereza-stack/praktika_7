/*Задача 4: Уникальные пути
Напишите функцию, которая вычисляет число уникальных путей в прямоугольной сетке размером m × n 
из левого верхнего угла в правый нижний, если можно двигаться только вправо или вниз.*/

#include <bits/stdc++.h>
using namespace std;

int main() {
    int m, n;
    cin >> m >> n;  // размеры

    vector<vector<int>> dp(m, vector<int>(n, 1));
    // Все клетки первой строки и столбца = 1 путь

    for(int i = 1; i < m; i++)
        for(int j = 1; j < n; j++)
            dp[i][j] = dp[i-1][j] + dp[i][j-1];  // сверху + слева

    cout << dp[m-1][n-1];
}
